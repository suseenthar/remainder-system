<div class="content">
  <!-- Page Header -->
  <div class="page-header">
    <div class="row">
      <div class="col-sm-12">
        <ul class="breadcrumb">
          <li class="breadcrumb-item"><a href="staff-list">Staffs </a></li>
          <li class="breadcrumb-item"><i class="feather-chevron-right"></i></li>
          <li class="breadcrumb-item active">edit Leave</li>
        </ul>
      </div>
    </div>
  </div>
  <!-- /Page Header -->
  <div class="row">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-body">
          <form>
            <div class="row">
              <div class="col-12">
                <div class="form-heading">
                  <h4>Edit Leave</h4>
                </div>
              </div>
              <div class="col-12 col-md-6 col-xl-6">
                <div class="form-group local-forms">
                  <label>Leave Type <span class="login-danger">*</span></label>
                  <select class="form-control select">
                    <option>Select Leave Type</option>
                    <option>Medical Leave</option>
                    <option>Casual Leave</option>
                    <option>Loss of Pay</option>
                  </select>
                </div>
              </div>
              <div class="col-12 col-md-6 col-xl-6">
                <div class="form-group local-forms">
                  <label
                    >Number of Days <span class="login-danger">*</span></label
                  >
                  <input class="form-control" type="text" value="2" />
                </div>
              </div>
              <div class="col-12 col-md-6 col-xl-6">
                <div class="form-group local-forms cal-icon">
                  <label>From <span class="login-danger">*</span></label>
                  <input
                    class="form-control datetimepicker"
                    type="text"
                    value="26-11-2022"
                  />
                </div>
              </div>
              <div class="col-12 col-md-6 col-xl-6">
                <div class="form-group local-forms cal-icon">
                  <label>To <span class="login-danger">*</span></label>
                  <input
                    class="form-control datetimepicker"
                    type="text"
                    value="26-11-2022"
                  />
                </div>
              </div>
              <div class="col-12 col-sm-12">
                <div class="form-group local-forms">
                  <label
                    >Leave Reason <span class="login-danger">*</span></label
                  >
                  <textarea class="form-control" rows="3" cols="30">
Going to hospital</textarea
                  >
                </div>
              </div>
              <div class="col-12 col-md-6 col-xl-3">
                <div class="form-group local-forms">
                  <input
                    class="form-control"
                    type="text"
                    readonly
                    value="Remainig Leaves: 12"
                  />
                </div>
              </div>
              <div class="col-12">
                <div class="doctor-submit text-end">
                  <button
                    type="submit"
                    class="btn btn-primary submit-form me-2"
                  >
                    Submit
                  </button>
                  <button type="submit" class="btn btn-primary cancel-form">
                    Cancel
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
